
<div>
  <h1>Listing Tokimon</h1>
</div>

<table>
  <thead>
    <tr>
      <th>Tname</th>
      <th>Tweight</th>
      <th>Theight</th>
      <th>Fly</th>
      <th>Fight</th>
      <th>Fire</th>
      <th>Water</th>
      <th>Electric</th>
      <th>Ice</th>
      <th>Dark</th>
      <th>Psychic</th>
      <th>Total</th>
      <th>Trainer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tokimons.each do |tokimon| %>
      <tr>
        <td><%= tokimon.tname %></td>
        <td><%= tokimon.tweight %></td>
        <td><%= tokimon.theight %></td>
        <td><%= tokimon.fly %></td>
        <td><%= tokimon.fight %></td>
        <td><%= tokimon.fire %></td>
        <td><%= tokimon.water %></td>
        <td><%= tokimon.electric %></td>
        <td><%= tokimon.ice %></td>
        <td><%= tokimon.dark %></td>
        <td><%= tokimon.psychic %></td>
        <td><%= tokimon.total %></td>
        <td><%= tokimon.trainer_id %></td>
        <td><%= link_to 'Show', tokimon %></td>
        <td><%= link_to 'Edit', edit_tokimon_path(tokimon) %></td>
        <td><%= link_to 'Destroy', tokimon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

